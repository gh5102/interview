<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gh.question.mapper.UserMapper">
    <select id="getUser" resultType="com.gh.question.entity.User">
        SELECT id,password FROM t_user
        WHERE id = #{id}
    </select>

    <insert id="register"  parameterType="com.gh.question.entity.User">
        insert into t_user(id,user_name,password,salt,last_login_time,login_times)
        values (#{id},#{userName},#{password},#{salt},#{lastLoginTime},#{loginTimes})
    </insert>
    <update id="updateTimes">
        update t_user set login_times = login_times+1 where id = #{id}
    </update>
</mapper>